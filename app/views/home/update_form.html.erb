<form action="/home/update/<%= @post.id %>" method="post">
  <div class="form-group">
    <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="글 제목" value="<%= @post.title %>">
  </div>
  <div class="form-group">
    <input type="text" name="author" class="form-control" id="exampleInputPassword1" placeholder="작성자" value="<%= @post.author %>">
  </div>
  <textarea name="content" class="form-control"><%= @post.content %></textarea>
  <input type="submit" value="글작성" class="submit">
</form>
<style>
  form {
    max-width: 800px;
    margin: 0 auto;
  }

  .submit {
    margin: 30px;
  }
</style>